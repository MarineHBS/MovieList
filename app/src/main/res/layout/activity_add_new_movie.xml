<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/movie_name_edit_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/name_of_the_movie"
        android:inputType="text"/>
    <EditText
        android:id="@+id/movie_description_edit_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/description_of_the_movie"
        android:inputType="textMultiLine"/>
    <EditText
        android:id="@+id/movie_year_edit_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/year_of_the_movie"
        android:inputType="number"/>
    <Spinner
        android:id="@+id/genres_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>